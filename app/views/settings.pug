//- Settings / Profile Page
doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title BookOrbit - Settings
    link(href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet")
    link(href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet")
    link(href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet")
    link(href="https://fonts.googleapis.com/css2?family=Epilogue:ital,wght@0,100..900;1,100..900&family=Euphoria+Script&display=swap" rel="stylesheet")
    link(href="/css/reusable.css" rel="stylesheet")
    link(href="/css/user-dashboard.css" rel="stylesheet")
    
  body.h-screen
    .top-navbar
        h1.logo-text BookOrbit
        h1.text-xl.font-semibold.pl-3 Settings
        .flex.items-center.gap-4.ml-auto
          .w-8.h-8.rounded-full.overflow-hidden.bg-gray-200
            img.profile-picture(src="/images/default-avatar.png" alt="User Profile Picture" style="object-fit:cover;")

    .flex.h-full
      // Sidebar
      include partials/sidebar.pug
      
      // Main Content
      .flex-1.flex.flex-row.bg-gray-50
        // Settings Menu
        .w-64.bg-white.rounded-xl.shadow-md.mt-10.ml-10.p-6.flex.flex-col.gap-2
          h2.text-lg.font-semibold.mb-4 Settings
          button.bg-indigo-100.text-indigo-700.font-semibold.rounded-md.px-4.py-2.text-left Profile
          button.bg-white.text-gray-400.font-semibold.rounded-md.px-4.py-2.text-left.cursor-not-allowed(disabled) Cards
          button.bg-white.text-gray-400.font-semibold.rounded-md.px-4.py-2.text-left.cursor-not-allowed(disabled) Subscription
          button.bg-white.text-gray-400.font-semibold.rounded-md.px-4.py-2.text-left.cursor-not-allowed(disabled) My books
          button.bg-white.text-gray-400.font-semibold.rounded-md.px-4.py-2.text-left.cursor-not-allowed(disabled) Fines
          button.bg-white.text-gray-400.font-semibold.rounded-md.px-4.py-2.text-left.cursor-not-allowed(disabled) General settings
        
        // Profile Section
        .flex-1.mt-10.ml-10.bg-white.rounded-xl.shadow-md.p-10
          h2.text-xl.font-semibold.mb-6 Profile
          .flex.items-center.gap-6.mb-8
            .relative.w-20.h-20.rounded-full.overflow-hidden.bg-gray-200
              img#profile-picture-large.w-full.h-full.object-cover(src="/images/default-avatar.png" alt="User Profile Picture")
              .absolute.inset-0.bg-black.bg-opacity-40.flex.items-center.justify-center.opacity-0("hover:opacity-100").transition-opacity.cursor-pointer(onclick="document.getElementById('profilePicture').click()")
                i.fas.fa-camera.text-white.text-xl
            .flex.flex-col
              span.text-lg.font-bold#profileName
              span.text-sm.text-gray-400#profileUsername
              span.text-sm.text-gray-500#profileEmail
          .flex.gap-4.mb-8
            button#editProfileBtn(type="button" class="bg-blue-600 text-white font-semibold rounded-lg shadow-md px-6 py-2 hover:bg-blue-700 transition-colors") Edit Profile
            button#deleteAccountBtn(type="button" class="bg-red-100 text-red-700 font-semibold rounded-lg shadow-md px-6 py-2 hover:bg-red-200 transition-colors") Delete Account
          
          // Profile Details Table
          .bg-gray-50.rounded-lg.p-6
            h3.text-lg.font-semibold.mb-4 Profile Information
            table.w-full.text-left
              tbody.space-y-4
                tr
                  td.font-semibold.py-2.text-gray-600 Name
                  td#profileNameCell.py-2.text-gray-800
                tr
                  td.font-semibold.py-2.text-gray-600 Email
                  td#profileEmailCell.py-2.text-gray-800
                tr
                  td.font-semibold.py-2.text-gray-600 Username
                  td#profileUsernameCell.py-2.text-gray-800
                tr
                  td.font-semibold.py-2.text-gray-600 Member Since
                  td#profileMemberSince.py-2.text-gray-800
                tr
                  td.font-semibold.py-2.text-gray-600 Last Updated
                  td#profileLastUpdated.py-2.text-gray-800

  script(src="/js/settings.js")
  script(src="/js/sidebar.js") 